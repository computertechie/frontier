<form action="data" method="post" class="manualdata-form">
    <div class="value form-group">
        <label for="name-gather-info">Value</label>
        <input type="text" id="name-sensor" class="form-control value-input">
    </div>
    <div class="name form-group">
        <label for="gather-value">Sensor</label>
        <select name="sensor-name" id="sensor-name" class="form-control sensor-select">
            {{#each sensors}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="room form-group">
        <button class="submit btn btn-info">Submit</button>
    </div>
</form>