<form action="room" class="room-form" id="{{form-id}}" method="post">
    <div class="name form-group">
        <label for="name-input">Name</label>
        <input type="text" id="name-input" class="form-control room-name room-input">
    </div>
    <div class="description form-group">
        <label for="description-input">Description</label>
        <input type="text" id='description-input' class="form-control room-input room-description">
    </div>
    <div class="location form-group">
        <label for="location-input">Location</label>
        <input type="text" id='location-input' class="form-control room-location room-input">
    </div>
    <div class="submit form-group">
        <button type="submit" class="btn btn-default btn-info">Add Room</button>
    </div>
</form>
